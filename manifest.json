{
  "manifest_version": 2,
  "name": "Tab Manager",
  "version": "1.0",
  "description": "Manage browser tabs effectively by storing and restoring them.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "64": "assets/icon-64.png"
  }
}
